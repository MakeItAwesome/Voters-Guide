<div class="padding-container">
  <form action="/signup" method="post" class="center_div">
    <h1>Sign Up</h1>
    <p class="helper-text">Sign up for an account to save your votes. We will not send you any junk email.</p>
    <div class="form-group">
      <input type="text" name="name" class="form-control" id="name" placeholder="Name" required>
    </div>

    <div class="form-group">
      <!-- <label for="user-email">Email</label><span class="required-star">*</span> -->
      <input type="email" name="email" class="form-control" id="user-email" placeholder="Email" required>
    </div>

    <div class="form-group">
      <!-- <label for="user-password">Password</label><span class="required-star">*</span> -->
      <input type="password" name="password" class="form-control" id="user-password" placeholder="Set Password" required>
    </div>

    <div class="text-left">
      <button type="submit" class="btn btn-dark">Sign Up</button>
    </div>
    <div class="helper-text">
      Already have an account? <a href="/login">Log in</a>.
    </div>
  </form>
</div>
